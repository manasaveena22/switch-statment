#include<stdio.h>
main()
{
    int choice=0;
    printf("pick an item:\n 1.Pizza,\n 2.Burger,\n 3.Pasta,\n 4.French Fries,\n 5.Sandwich");
    scanf("%d",&choice);
    switch(choice)
    {
    case 1:
        printf("Food item - Pizza");
        printf("\nPrice - Rs 239");
        break;
    case 2:
        printf("Food item -Burger");
        printf("\nPrice - Rs 129");
        break;
    case 3:
        printf("Food item - Pasta");
        printf("\nPrice - Rs 179");
        break;
    case 4:
        printf("Food item - French Fries");
        printf("\nPrice - Rs 99");
        break;
    case 5:
        printf("Food item -Sandwich");
        printf("\nPrice - Rs 149");
        break;
    default:printf("invalid choice");
    }
}
